<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- SeekBar para seleccionar el rango de edad -->
    <SeekBar
        android:id="@+id/seekBarAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:max="100"
        android:progress="50"
        android:thumb="@drawable/thumb_custom" />

    <!-- SeekBar para calificación de la aplicación -->
    <SeekBar
        android:id="@+id/seekBarAppRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:max="10"
        android:progress="5"
        android:thumb="@drawable/thumb_custom" />

    <!-- SeekBar para calificación de errores de la aplicación -->
    <SeekBar
        android:id="@+id/seekBarBugsRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:max="10"
        android:progress="5"
        android:thumb="@drawable/thumb_custom" />

    <!-- SeekBar para la recomendación de la aplicación -->
    <SeekBar
        android:id="@+id/seekBarRecommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:max="10"
        android:progress="5"
        android:thumb="@drawable/thumb_custom" />

    <!-- Spinner para la fuente de conocimiento de la aplicación -->
    <Spinner
        android:id="@+id/spinnerAppSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:entries="@array/app_source_options" />

    <!-- EditText para comentarios adicionales -->
    <EditText
        android:id="@+id/editTextComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Comentarios adicionales"
        android:inputType="textMultiLine" />

    <!-- Botón para generar el informe -->
    <Button
        android:id="@+id/btnGenerateReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Generar Informe" />

</LinearLayout>